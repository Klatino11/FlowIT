<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutNuevoEmpleado"
    android:layout_width="800dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/fondo_detalle">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo Empleado"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/flowit_azul_oscuro"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Nombre -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Nombre:"
            android:textColor="@color/flowit_azul_oscuro"/>

        <EditText
            android:id="@+id/etNombreEmpleado"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textSize="15sp"
            android:textColor="@color/flowit_negro"
            android:textColorHint="@color/HintTexts"/>

    </LinearLayout>

    <!-- Departamento -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Departamento:"
            android:textColor="@color/flowit_azul_oscuro"/>

        <Spinner
            android:id="@+id/spDepartamento"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Tipo de documento -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Tipo documento:"
            android:textColor="@color/flowit_azul_oscuro"/>

        <Spinner
            android:id="@+id/spTipoDocumento"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Número de documento -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Nº documento:"
            android:textColor="@color/flowit_azul_oscuro"/>

        <EditText
            android:id="@+id/etNumeroDocumento"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Ej: 12345678"
            android:inputType="textPersonName"
            android:textSize="15sp"
            android:textColor="@color/flowit_negro"
            android:textColorHint="@color/HintTexts"/>
    </LinearLayout>

    <!-- Oficina -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Oficina:"
            android:textColor="@color/flowit_azul_oscuro"/>

        <Spinner
            android:id="@+id/spOficina"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelarNuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="@color/flowit_azul_oscuro"
            android:backgroundTint="@color/flowit_turquesa"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnCrearNuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/flowit_azul_oscuro"/>
    </LinearLayout>
</LinearLayout>
