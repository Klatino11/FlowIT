<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del dispositivo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/flowit_azul_oscuro"
            android:layout_marginBottom="24dp" />

        <!-- Contenedor de datos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp"
            android:backgroundTint="@android:color/white"
            android:layout_margin="4dp"
            android:clipToPadding="false"
            android:background="@drawable/bg_card_white_rounded">

            <!-- Campo ejemplo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo:"
                    android:textColor="@color/flowit_azul_intermedio"
                    android:textStyle="bold"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvDetalleTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portátil"
                    android:layout_weight="1"
                    android:textColor="@color/flowit_azul_oscuro" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asignacion:"
                    android:textColor="@color/flowit_azul_intermedio"
                    android:textStyle="bold"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvDetalleAsignacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMP123"
                    android:layout_weight="1"
                    android:textColor="@color/flowit_azul_oscuro" />
            </LinearLayout>

            <!-- Repite estructura para todos los campos -->

        </LinearLayout>

    </LinearLayout>
</ScrollView>
