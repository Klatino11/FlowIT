<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutDetalleDepartamento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo_detalle">

    <!-- CÃ³digo del departamento (solo valor) -->
    <TextView
        android:id="@+id/tvDetalleCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:text="DPT001"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/flowit_azul_oscuro" />

    <!-- Nombre del departamento (solo valor) -->
    <TextView
        android:id="@+id/tvDetalleNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Sistemas"
        android:textSize="15sp"
        android:textColor="@color/flowit_azul_intermedio" />

</LinearLayout>
